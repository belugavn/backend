# Server
PORT=8080
NODE_ENV=production
CORS_ORIGIN=*

# MongoDB Atlas
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth0
AUTH0_DOMAIN=your-tenant.region.auth0.com
AUTH0_CLIENT_ID=xxxxxxxx
AUTH0_CLIENT_SECRET=xxxxxxxx
AUTH0_AUDIENCE=https://your-api-identifier

# Cloudflare R2 (S3 compatible)
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxx
R2_ACCESS_KEY_ID=xxxxxxxx
R2_SECRET_ACCESS_KEY=xxxxxxxx
R2_BUCKET=edu-bucket
# Endpoint dạng: https://<accountid>.r2.cloudflarestorage.com
R2_ENDPOINT=https://${R2_ACCOUNT_ID}.r2.cloudflarestorage.com
R2_PUBLIC_BASE=https://pub-xxxxxxxx.r2.dev  # nếu bạn cấu hình public domain, optional
